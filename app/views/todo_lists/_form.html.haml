= form_for(@todo_list) do |f|
  - if @todo_list.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo_list.errors.count, "error")
        prohibited this todo_list from being saved:
      %ul
        - @todo_list.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title, :placeholder => 'Enter Todo list title'
  .field
    = f.label :description
    %br/
    = f.text_area :description, :placeholder => 'Enter Todo list description'
  .actions
    = f.submit
